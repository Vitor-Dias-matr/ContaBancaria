@using Teste.Extensions 
@using Teste.Models
@using Teste.ViewModel
@model IEnumerable<MovimentacaoViewModel>

@{
    ViewData["Title"] = "Extrato por Mês";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Tipo</th>
            <th>Data</th>
            <th>Valor</th>
            <th>Conta Origem</th> 
            <th>Conta Destino</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4" class="text-center">Nenhum registro encontrado.</td>
            </tr>
        }
        else
        {
            @foreach (var movimentacao in Model)
            {
                <tr>
                    <td>@movimentacao.Tipo.ToFriendlyString()</td> <!-- Usando o método de extensão -->
                    <td>@movimentacao.Data.ToString("dd/MM/yyyy HH:mm:ss")</td>
                    <td>@movimentacao.Valor.ToString("C")</td>
                    <td>@movimentacao.NumeroContaOrigem</td>
                    <td>@movimentacao.NumeroContaDestino</td>
                </tr>
            }
        }
    </tbody>
</table>
