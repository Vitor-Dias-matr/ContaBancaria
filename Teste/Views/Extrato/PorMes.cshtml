@using Teste.ViewModel
@model IEnumerable<MovimentacaoViewModel>

@{
    ViewData["Title"] = "Extrato por Mês";
}

<h2>Extrato por Mês</h2>

<form method="get" asp-action="PorMes">
    <div class="form-group">
        <label for="ano">Escolha o Ano:</label>
        <input type="number" id="ano" name="ano" class="form-control" min="1900" max="2100" required />
    </div>
    <div class="form-group">
        <label for="mes">Escolha o Mês:</label>
        <input type="number" id="mes" name="mes" class="form-control" min="1" max="12" required />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>

@if (Model != null && Model.Any())
{
    <table class="table mt-3">
        <thead>
            <tr>
                <th>Data</th>
                <th>Tipo</th>
                <th>Valor</th>
                <th>Conta Origem</th>
                <th>Conta Destino</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movimentacao in Model)
            {
                <tr>
                    <td>@movimentacao.Data.ToString("d")</td>
                    <td>@movimentacao.Tipo</td>
                    <td>@movimentacao.Valor.ToString("C")</td>
                    <td>@movimentacao.NumeroContaOrigem</td>
                    <td>@movimentacao.NumeroContaDestino</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-muted">Nenhuma movimentação encontrada para o mês e ano selecionados.</p>
}
