@using Teste.ViewModel
@model ExtratoSearchViewModel

@{
    ViewData["Title"] = "Buscar Extrato";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Buscar por Dia</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Extrato" asp-action="PorDia" method="get">
                        <input type="hidden" name="NumeroConta" value="@Model.NumeroConta" />
                        <div class="form-group">
                            <label for="Data" class="form-label">Data</label>
                            <input id="Data" name="dia" class="form-control" type="date" />
                            <span class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Buscar por Dia</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Buscar por Mês</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Extrato" asp-action="PorMes" method="get">
                        <input type="hidden" name="NumeroConta" value="@Model.NumeroConta" />
                        <div class="form-group">
                            <label asp-for="Ano" class="form-label">Ano</label>
                            <input asp-for="Ano" class="form-control" type="number" />
                            <span asp-validation-for="Ano" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Mes" class="form-label">Mês</label>
                            <input asp-for="Mes" class="form-control" type="number" />
                            <span asp-validation-for="Mes" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Buscar por Mês</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="card-title">Buscar por Intervalo</h3>
                </div>
                <div class="card-body">
                    <form asp-controller="Extrato" asp-action="PorIntervalo" method="get">
                        <input type="hidden" name="numeroConta" value="@Model.NumeroConta" />
                        <div class="form-group">
                            <label for="Inicio" class="form-label">Data Início</label>
                            <input id="Inicio" name="inicio" class="form-control" type="date" />
                            <span class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Fim" class="form-label">Data Fim</label>
                            <input id="Fim" name="fim" class="form-control" type="date" />
                            <span class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Buscar por Intervalo</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

